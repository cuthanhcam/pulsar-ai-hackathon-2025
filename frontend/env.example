# ========================================

# ==================== Backend API ====================
# Backend API base URL
NEXT_PUBLIC_API_URL=http://localhost:5000

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# ==================== NextAuth ====================
# Application URL
NEXTAUTH_URL=http://localhost:3000

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# ==================== OAuth Providers ====================
# GitHub OAuth
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Google OAuth  
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==================== Features ====================
# Enable/disable features
NEXT_PUBLIC_ENABLE_COMMUNITY=true
NEXT_PUBLIC_ENABLE_MESSENGER=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_QUIZ=true

# ==================== UI Configuration ====================
# Default theme (light, dark, system)
NEXT_PUBLIC_DEFAULT_THEME=dark

# Default language
NEXT_PUBLIC_DEFAULT_LOCALE=vi

# Show onboarding for new users
NEXT_PUBLIC_SHOW_ONBOARDING=true

# ==================== Analytics (Optional) ====================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=

# ==================== SEO ====================
# Site metadata
NEXT_PUBLIC_SITE_NAME=PulsarTeam AI Learning
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_DESCRIPTION=AI-Powered Personalized Learning Platform

# ==================== Development ====================
# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Show detailed error messages
NEXT_PUBLIC_SHOW_ERROR_DETAILS=true

# ==================== Canvas Background ====================
# Enable animated backgrounds
NEXT_PUBLIC_ENABLE_CANVAS=true

# Canvas particle count
NEXT_PUBLIC_CANVAS_PARTICLES=100

# Canvas animation speed (1 = normal, 2 = fast)
NEXT_PUBLIC_CANVAS_SPEED=1

# ==================== Credits ====================
# Show credit balance in header
NEXT_PUBLIC_SHOW_CREDITS=true

# Credit purchase enabled
NEXT_PUBLIC_ENABLE_CREDIT_PURCHASE=true

# ==================== Toast Notifications ====================
# Default toast position (top-right, top-left, bottom-right, bottom-left)
NEXT_PUBLIC_TOAST_POSITION=top-right

# Toast duration in milliseconds
NEXT_PUBLIC_TOAST_DURATION=3000

# ==================== Rate Limiting ====================
# Client-side rate limiting (requests per minute)
NEXT_PUBLIC_CLIENT_RATE_LIMIT=60

