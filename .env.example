# =============================================================================
# PulsarTeam AI Learning Platform - Environment Variables
# =============================================================================
# IMPORTANT: Rename this file to .env before using
# Command: cp .env.example .env
# NEVER commit .env to git - it contains sensitive credentials
# =============================================================================

# -----------------------------------------------------------------------------
# NextAuth.js Authentication (REQUIRED)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET="your-super-secret-32-character-string"
NEXTAUTH_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/pulsarteam_dev?schema=public"
DIRECT_URL="postgresql://postgres:password@localhost:5432/pulsarteam_dev?schema=public"

# -----------------------------------------------------------------------------
# Supabase (Optional - if using Supabase as database)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# -----------------------------------------------------------------------------
# Email Configuration (REQUIRED for OTP)
# -----------------------------------------------------------------------------
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="PulsarTeam"

# -----------------------------------------------------------------------------
# OAuth Providers (Optional)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# -----------------------------------------------------------------------------
# AI Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Vector Database for RAG
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY="your-qdrant-api-key"

# Ollama for local AI models (Optional)
OLLAMA_URL="http://localhost:11434"

# -----------------------------------------------------------------------------
# Security (REQUIRED)
# -----------------------------------------------------------------------------
ENCRYPTION_KEY="your-64-character-hex-encryption-key"

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Generate secrets:
#    - NEXTAUTH_SECRET: openssl rand -base64 32
#    - ENCRYPTION_KEY: openssl rand -hex 32
# 3. Setup database (PostgreSQL locally or Supabase)
# 4. Configure email (Gmail with App Password)
# 5. Run migrations: npx prisma migrate dev
# 6. Start development: npm run dev
# =============================================================================

